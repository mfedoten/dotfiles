[user]
    name = Mariia Fedotenkova
    email = maria.fedotenkova@gmail.com

[core]
    excludesfile = ~/.config/git/gitignore_global
    editor = vim
    legacyheaders = false # >git 1.5
    quotepath = false
    # http://stackoverflow.com/questions/136178/git-diff-handling-long-lines
	pager = less
    # if ↑ doesn’t work, try: pager = less -+$LESS -FRX

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = auto
    interactive = auto

[push]
    default = simple # [ matching | simple ]

[repack]
    usedeltabaseoffset = true # >git 1.5

[alias]
    alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
    st = status
    sti = status --ignored
    a = add
    aa = !git add . && git status
    ci = commit
    cm = commit -m
    ca = commit --amend # careful
    ac = !git add . && git commit
    acm = !git add . && git commit -m
    l = log --graph --all --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
    ll = log --stat --abbrev-commit
    lg = log --color --graph --pretty=format:'%C(bold white)%h%Creset -%C(bold green)%d%Creset %s %C(bold green)(%cr)%Creset %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    lsg = log --color --stat --graph --pretty=format:'%C(bold white)%h%Creset -%C(bold green)%d%Creset %s %C(bold green)(%cr)%Creset %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    d = diff
    master = checkout master
    co = checkout
    br = branch
    up = rebase
    apply-ignore = !git ls-files -ci --exclude-standard -z | xargs -0r git rm --cached
    checki = check-ignore -v --no-index
    spull = svn rebase
    spush = svn dcommit
[diff]
	tool = vimdiff

[include]
    path = config_local
